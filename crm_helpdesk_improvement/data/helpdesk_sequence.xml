<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="1">
        <record id="sequence_type_crm_helpdesk" model="ir.sequence.type">
            <field name="name">CRM Helpdesk code type</field>
            <field name="code">crm.helpdesk</field>
        </record>
        <record id="sequence_crm_helpdesk" model="ir.sequence">
            <field name="name">CRM Helpdesk code</field>
            <field name="code">crm.helpdesk</field>
            <field eval="5" name="padding" />
            <field name="prefix">TK</field>
        </record>
        <!-- Requests Links -->
        <record id="req_link_crm_helpdesk" model="res.request.link">
            <field name="name">Ticket Helpdesk</field>
            <field name="object">crm.helpdesk</field>
        </record>

        <!-- Blacklist config -->

        <record id="number_of_tickets" model="ir.config_parameter">
            <field name="key">crm_helpdesk_improvement.number_of_tickets</field>
            <field name="value">3</field>
        </record>

        <record id="number_of_minutes" model="ir.config_parameter">
            <field name="key">crm_helpdesk_improvement.number_of_minutes</field>
            <field name="value">45</field>
        </record>

    </data>
</openerp>