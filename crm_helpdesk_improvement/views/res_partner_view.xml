<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_crm_helpdesk_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.crm.helpdesk.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button class="oe_inline oe_stat_button" type="action" name="%(crm_case_helpdesk_act333)d"
                        context="{'partner_search': id, 'email_search': email}"
                        icon="fa-question">
                        <field string="Cases" name="crm_helpdesk_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
       </record>
   </data>
</openerp>